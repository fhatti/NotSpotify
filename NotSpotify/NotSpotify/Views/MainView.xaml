<Window x:Class="NotSpotify.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:notSpotify="clr-namespace:NotSpotify"
        mc:Ignorable="d"
        Background="#222222"
        WindowStyle="None"
        ResizeMode="NoResize"
        Title="MainView" Height="800" Width="450">

    <Window.DataContext>
        <notSpotify:MainView />
    </Window.DataContext>

    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Image Height="225"
                   Source="https://img.freepik.com/free-vector
                   /geometric-pattern-seamless-graphic-
                   -80s-90s-trendy-styles-black-background-black
                   -white-pattern-with-different-shapes-objects
                   -wrapping-paper-background_136321-1180.jpg"
                   Opacity=".3"
                   Stretch="UniformToFill" />
            <StackPanel VerticalAlignment="Bottom" Margin="8">
                <TextBlock Text="PLAYLIST"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Medium" />

                <TextBlock Text="Daily Drive"
                           Foreground="White"
                           FontSize="44"
                           FontWeight="Medium" />

                <TextBlock Text="A mix made for you"
                           Foreground="LightGray"
                           FontSize="12"
                           FontWeight="Bold" />
            </StackPanel>
        </Grid>

        <ListViewItem Background="#25252525" ScrollViewer.CanContentScroll="False">

        </ListViewItem>

    </DockPanel>
</Window>